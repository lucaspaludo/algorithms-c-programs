#include <stdio.h>

int main(void) {

  int mat [3][3]; 
  int i,j;

  //lê os elementos do teclado
  for(i = 0; i<3; i++)
  {
    for(j = 0; j<3; j++)
    {
      printf("Digite o elemento %d %d: ",i,j);
      scanf("%d", &mat[i][j]);
    }
  }

  //imprime através da aritmética de ponteiros
  int *x = NULL;
  
  x = mat[0];
  printf("\n%d", *x);

  x = mat[0]+1;
  printf("\n%d", *x);

  x = mat[0]+2;
  printf("\n%d", *x);

  x = mat[0]+3;
  printf("\n%d", *x);

  x = mat[0]+4;
  printf("\n%d", *x);

  x = mat[0]+5;
  printf("\n%d", *x);

  x = mat[0]+6;
  printf("\n%d", *x);

  x = mat[0]+7;
  printf("\n%d", *x);

  x = mat[0]+8;
  printf("\n%d", *x);




  return 0;
}
